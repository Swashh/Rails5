<h1>Редактирование поста</h1>
<%= form_for :post, url: category_post_path(@category, @post), method: :patch do |f| %>
    <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@post.errors.count, "ошибки не позволили сохранить эту статью:") %>
          </h2>
          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      Название<br>
      <%= f.text_field(:title, {:class => 'form-control'}) %>
    </p>
    <p>
      Описание поста<br>
      <%= f.text_area(:text,{:class => 'form-control'})%>
    </p>
    <p>

      <%= f.submit("Cохранить",{:class => 'btn btn-info'}) %>
    </p>

<% end %>