<h1>Редактирование поста</h1>
<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
    <p>
      Название<br>
      <%= f.text_field(:title, {:class => 'form-control'}) %>
    </p>
    <p>
      Описание статьи<br>
      <%= f.text_area(:text,{:class => 'form-control'})%>
    </p>
    <p>

      <%= f.submit({:class => 'btn btn-info'}) %>
    </p>

<% end %>