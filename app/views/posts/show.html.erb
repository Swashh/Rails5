<h2>Название поста:</h2>
<h1> <%= @post.title %></h1>
<h2>Описание поста :</h2>
<p1> <%= @post.text %></p1>
<p>

<h1>Все наши комментарии</h1>
<% @post.comments.each do |comment| %>
    <div class="alert alert-light">
      <h3><%= comment.title %></h3>
      <p3><%= comment.text %></p3>
    </div>
    <br>
<% end %>

<h2>Комментарии:</h2>
<%= form_for [@post, @post.comments.build], url: category_post_comments_path(@category, @post) do |f| %>

    <p>
      Название<br>
      <%= f.text_field(:title, {:class => 'form-control'}) %>
    </p>
    <p>
      Текст комментария<br>
      <%= f.text_area(:text,{:class => 'form-control'})%>
    </p>
    <p>

      <%= f.submit("Добавить комментарий", {:class => 'btn btn-info'}) %>
      <%= link_to "Назад", categories_path, :class => 'btn btn-info' %>

    </p>

<% end %>
