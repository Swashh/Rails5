<h1>Редактирование категории</h1>

<%= form_for :category, url: category_path(@category), method: :patch do |f| %>
    <% if @category.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@category.errors.count, "ошибки не позволили сохранить эту статью:") %>
          </h2>
          <ul>
            <% @category.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      Название<br>
      <%= f.text_field(:title, {:class => 'form-control'}) %>
    </p>
    <p>
      Описание статьи<br>
      <%= f.text_area(:text,{:class => 'form-control'})%>
    </p>
    <p>

      <%= f.submit("Сохранить",{:class => 'btn btn-info'}) %>
      <%= link_to "Назад", categories_path, :class => 'btn btn-info' %>

    </p>
<% end %>

